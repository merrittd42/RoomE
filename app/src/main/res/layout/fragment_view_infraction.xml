<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inallofexistence.greatestdevelopersever.roome.JoinCreateHomegroupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vShameNameTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/fui_field_padding_vert" />

        <TextView
            android:id="@+id/shameDescTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/fui_field_padding_vert" />

        <ImageView
            android:id="@+id/shamePic"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/fui_ic_mail_white_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <Button
            android:id="@+id/deleteShameBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rules_delete" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
